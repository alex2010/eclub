extends ./inc/main

block content
    .container
        if crumb
            include ../../inc/crumb

        .row.article
            .col-md-8
                .row
                    .col-md-6
                        slide
                    .col-md-6
                        h3= title
                        hr
                .article-context
                    .tab
                    != description


            .col-md-4
                h3 相关文章
                ul
                    each it in postList
                        li!= f.link(it)