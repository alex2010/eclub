    mixin thumbnail(opt,name)
        if !name
            -name='logo'

        div&attributes(attributes)
            .thumbnail: != f.imgItem(opt, c, name)
            //.caption
            //    h4=opt.title
            if block
                block
    mixin panel(title,tagCls)
        if !tagCls
            -tagCls='panel-body'
        if !attributes.class
            -attributes.class='panel panel-default'
        div&attributes(attributes)
            .panel-heading
                h3.panel-title= title
            div(class=tagCls)
                if block
                    block
    mixin media(posts,opt)
        if !opt.ttLimits
            -opt.ttLimits= 12
        if !opt.ctLimit
            -opt.ctLimit= 24
        if !opt.singleR
            -opt.singleR= false
        each it in posts
            a.media.media_left.clearfix(href='/#{it._e}/#{it._id}',target='_blank')
                if !opt.singleR
                    .col-xs-4
                        != f.imgItem(it, c, opt.func || 'head', 'media-object')
                else
                    != f.imgItem(it, c, opt.func || 'head', 'media-object')
                .col-xs-8.body
                    h4.media-heading!=it.title || it.username
                    != f.dStr(it.description || it.address, 20)

