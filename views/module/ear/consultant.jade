extends ./inc/main
block style
    :less(minify=true)
        /*.panel {*/
            /*margin-bottom: 20px;*/
        /*}*/

        .media {
            &.summary {
                padding-top: 10px;
                border-top: 1px solid #ddd !important;
                img {
                    width: 200px;
                }
                .media-body {
                    h2 {
                        color: #31708f;
                    }
                }
            }
        }

        .dl-horizontal {
            margin-top: 15px;
            font-size: 12px;
            dt {
                width: 80px;
                text-align: left;
                line-height: 26px;
            }
            dd {
                margin-left: 80px;
                line-height: 26px;
            }
        }

        .thumbnail {
            position: relative;
            .caption {
                padding: 0;
                position: absolute;
                z-index: 2;
                bottom: 0;
                left: 0;
                width: 100%;
                background: rgba(51, 51, 51, .6);
                border-bottom-left-radius: 4px;
                border-bottom-right-radius: 4px;
                h4 {
                    margin: 0;
                    color: #fff;
                    text-align: center;
                    line-height: 30px;
                }
            }
        }

        .list-group-item {
            &.active {
                background: #f5f5f5;
                border-color: #ddd;
                color: #333;
                &:hover {
                    background: #f5f5f5;
                    border-color: #ddd;
                    color: #333;
                }
            }
        }

        .tightening {
            text-indent: 2em;
        }

        .mb20 {
            margin-bottom: 20px;
        }

        .clear:after {
            content: '.';
            display: block;
            height: 0;
            overflow: hidden;
            clear: both;
        }
block content
    .row.article
        .col-md-8
            if crumb
                include ../../inc/crumb
            +panel('验配师介绍')
                .panel-body
                    .row
                        .col-md-5
                            .thumbnail!= f.imgItem(locals, c, 'head')
                        .col-md-7
                            .caption
                                h2#username.media-heading= username
                                dl.dl-horizontal
                                    if exp
                                        +ddItem('入行时间',exp.pattern('yyyy-MM-dd'))
                                    +ddItem('电话号码',phone)
                                    +ddItem('工作职称',workTitle)
                                    +ddItem('所学专业',major)
                    if shop
                        h4 所属验配中心
                        if shop._id
                            div: a#shop(href='/shop/#{shop._id}' sid=shop._id)= shop.title
                        else
                            div= shop.title
                        p 地址：#[span#shop_addr= shop.address] 【#[span#shop_phone=shop.phone]】

                    if description
                        h4 验配师简介
                        p.tightening= description
                    p.text-center
                        a(href=f.navUrl('apply/order')).btn.btn-primary.btn-lg 问诊预约
            if strength
                +panel('专业特长')
                    .panel-body
                        =strength
            -var brandArr=goodAtBrand
            if brandArr && brandArr != []
                +panel('擅长品牌')
                    .panel-body
                        each it,i in brandArr
                            +thumbnail(it).col-xs-3
            if comments
                +panel('用户评价')

        .col-md-4.m3
            if consultantList
                +panel('相关验配师')
                    .list-group
                        - var v = _cd.consultant
                        +media(consultantList,{func: v.func, text: v.text})

mixin ddItem(title,content)
    if !content
        -content='--'
    dt= title + '：'
    dd= content
