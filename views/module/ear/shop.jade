extends ./inc/main
block content
    mixin item(tip,data)
        if !attributes.class
            -attributes.class=''
        li.item-data
            span.tip= tip + '： '
            span(class='data #{attributes.class}')= data

    include ../../inc/crumb
    .row.article
        .col-md-8
            //.thumbnail
            //    != f.imgItem(locals, c, 'slide')

            +panel('验配中心介绍')
                h2.title.text-center.pl0= title

                if refFile && refFile.slide
                    +slide(c, refFile.slide)

                .panel-body
                    h4 店铺介绍

                    p.desc= description

                    p.text-center
                        a(href=f.navUrl('apply/order')).btn.btn-primary.btn-lg 问诊预约
            if consultant && consultant.length != 0
                +panel('验配师')
                    .panel-body

                        each it in consultant
                            .media
                                .media-left
                                    a(href='/consultant/#{it._id}')
                                        != f.imgItem(it, c)
                                .media-body
                                    h4
                                        a(href='/consultant/#{it._id}')= it.username
                                    p= it.description

            if brand
                +panel('经营品牌')
                    .panel-body
                        each it,i in brand
                            +thumbnail(it).col-md-3

        .col-md-4.m3
            +panel('基本信息')
                .panel-body
                    if park == '是'
                        .col-md-12
                            ul.list-inline
                                li
                                    span.glyphicon.glyphicon-compressed
                                li
                                    span.tip 可停车
                    if dropIn == '是'
                        .col-md-12.pt20
                            ul.list-inline
                                li
                                    span.glyphicon.glyphicon-log-in
                                li
                                    span.tip 提供上门服务
                    .col-md-12.pt20
                        ul#phone.list-inline
                            li
                                span.glyphicon.glyphicon-phone
                            +item('联系电话',phone)
                    .col-md-12.pt20
                        ul#address.list-inline
                            li
                                span.glyphicon.glyphicon-road
                            +item('地址',address)(class='w180')
                    .col-md-12.pt20
                        ul.list-inline
                            li
                                span.glyphicon.glyphicon-calendar
                            +item('营业面积',space)
            if shopList

                +panel('热门验配中心')
                    - var v = _cd.shop
                    .list-gourp
                        +media(shopList,{func: v.func, text: v.text})
block st
    :coffee(bare=true,minify=true)
        new cf.view.slide
            el: '.carousel.slide'
            controller: true
            indicator: true