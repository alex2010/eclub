extends ./inc/main
block style
    :less(minify=true)
        .panel {
            margin-top:15px;
            margin-bottom:5px;
            .panel-title {
                font-size: 16px;
            }
        }
        .thumbnail {
            padding-top:10px;
            border:1px solid #e9e9e9;
            .caption {
                text-align:center;
            }
        }
block content
    .row
        .col-md-8
            //each it in data
            .panel.panel-default
                .panel-heading
                    h2.panel-title 卡券
                .panel-body.row
                    -var n=0
                    while n<6
                        .col-md-4
                            a(href="").thumbnail
                                img(src="#{resPath}images/testShopHead.jpg")
                                .caption
                                    h3 xx中心优惠卡券
                                    p 领取价格&nbsp;<strong class="text-danger">500元</strong>
                                    span.btn.btn-primary(href="") 领取
                        -n++
        .col-md-4