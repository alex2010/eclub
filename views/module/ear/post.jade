extends ./inc/main

block style
    :less(minify=true)
        .postPic{
            width: 450px !important;
            float: left
        }
        .imgBox{
            text-align: left;
        }
        .hostInfo{
            display: none;
        }
        h2{
            font-size: 22px !important;
        }
block content
    .container
        include ../../inc/crumb
        .article
            #main.col-md-8
                include ../../inc/mod/post
            #side.col-md-4
                h3 相关文章
                ul
                    each it in postList
                        li!= f.link(it)

block st
    :coffee(bare=true,minify=true)
        cf.noCopy()