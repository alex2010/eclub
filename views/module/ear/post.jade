extends ./inc/main

block style
    :less(minify=true)
        .postPic {
            width: 450px !important;
            float: left
        }

        .imgBox {
            text-align: left;
        }

        .hostInfo {
            display: none;
        }

        h2 {
            font-size: 22px !important;
        }
block content
    include ../../inc/crumb
    .row
        .article
            .col-md-8
                include ../../inc/mod/post
            .col-md-4
                if postList
                    .row.m3
                        +panel('相关文章')
                            .list-group
                                +media(postList)


block st
    :coffee(bare=true,minify=true)
        cf.noCopy()