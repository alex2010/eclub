extends inc/main

block content
    .container
        include ../../inc/crumb
        .article
            .col-md-8
                include ../../inc/mod/activity_bl
                hr
                - cc = _cat[cat]
                if cc
                    blockquote
                        h4= cc.title
                        p!= cc.content

            .col-md-4
                .pa
                h3 主题活动
                ul
                    each it in cats
                        li!= f.link(it)

                h3 最新活动
                ul
                    each it in latest
                        li!= f.link(it)
    script.
        _ft = !{JSON.stringify(feeTable || '[]')};
        _pa = !{JSON.stringify(participant || '[]')};

block st
    :coffee(bare=true minify=true)
        cf.loadJS "#{cf.modPath}router.js",->
            cf.loadJS "#{cf.modPath}enroll.js"
