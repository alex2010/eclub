extends inc/main

block content

    #group.container
        .row
            .article
                .col-md-8.main
                    include ../../inc/crumb
                    +title(title, subTitle).hidden-xs
                    .row
                        != f.imgItem(locals, c)

                    +title(title, subTitle).hidden-sm.hidden-md.hidden-lg
                    if idea
                        .well.well-sm= idea

                    .article-content
                        if content
                            != content.replaceAll('_cImg" src', '_cImg" bb-src')

                    if user
                        hr
                        h3 圈子组织者
                        +userInfo(leader)

                    if members && members.length > 3
                        h3 圈子成员
                        +avatars(members).col-xs-2.col-md-1.p0
                    hr
                    p
                    p
                        a.btn.btn-lg.btn-block.btn-primary.apply 进入圈子

                    //h3 微信群
                    //.row.imgBox
                    //    != f.imgItem(locals, c, 'qrcode')

                    h3 评论

                .col-md-4.side.m3
                    +itemList(groupList, '其他小组')

    script.
        _gd = !{JSON.stringify(_.pick(locals, '_id', 'title', 'idea', 'refFile'))};

block st
    :coffee(bare=true,minify=true)
        user && user.offlineCheck()
        $('.apply').click ->
            if !user.isLogin()
                cf.r 'login'
                return
            items = ['username', 'phone', 'wid', 'industry', 'title', 'company', 'introduction']
            app.dm.form 'air', 'user',
                title: '申请信息'
                entity: 'groupMember'
                data: _.pick user.attributes, items
                before: (d)->
                    n =
                        _id: _gd._id
                        user: d
                        group: _gd
                        status: '1'
                        role: 'newbie'
                    n.user._id = user._id
                    n
                btns: ['save']
                items: items

