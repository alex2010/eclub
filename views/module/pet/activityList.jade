extends inc/main
block content
    #activity.container
        .row
            .col-md-8
                include ../../inc/crumb
                #activityList.boxList
                    each it in items
                        include inc/boxItem
                    .nav
                        ul.pager
                            if _skip != 0
                                li.pull-left: a(href='/activityList?skip=#{_skip - _limit}') 上一页
                            if _skip + _limit < _max
                                li.pull-right: a(href='/activityList?skip=#{_skip + _limit}') 下一页
            .col-md-4
                +panel('活动主题').panel-danger
                    .list-group
                        a.list-group-item(href='/postList') 全部
                        each it in cats
                            != f.link(it,null,'list-group-item')