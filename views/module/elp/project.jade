extends inc/main
block content
    include ../../inc/crumb
    .article
        .col-md-8
            h2(style='font-size: 20px;').event-name= title
                small: a(href='/postList.html?cat=topic')= cat
            .row
                != f.imgItem(locals, c, 'head')

            p.text-right= createdDate

            if author
                - _user = user
                - _user._e = 'user'
                - _uClass = 'author'
                include ../../inc/mod/userInfo

            if startedDate
                p
                    span.label.label-info.normal 项目时间
                    |&nbsp; #{startedDate.pattern('yyyy年MM月dd日')}-#{endDate.pattern('yyyy年MM月dd日')}
            p
                span.label.label-info.normal 项目规模

            p
                span.label.label-info.normal 项目阶段


            +panel('项目介绍')(pClass='panel-info')
                .article-content!= content

            .clearfix
                .col-xs-6
                    a.btn.btn-block.btn-success(onclick="cf._eAct('#{_id}','project','up')")!= f.icon('thumbs-up')
                .col-xs-6
                    a.btn.btn-block.btn-danger(onclick="cf._eAct('#{_id}','project','down')")!= f.icon('thumbs-down')

            if care
                +panel('关注的家人')
                    .row
                        +avatars(care)(class='col-xs-2')


            +comments(_id,'project',comment)

        .col-md-4
            +panel('最新项目信息')(pClass='panel-info')
                +media(projectList,{})
block st
    :coffee(bare=true minify=true)