extends ./inc/main

mixin formItem(title,name,help)
    .form-group
        label(style='padding-left:0').col-sm-3.control-label=title
        .col-sm-9
            if block
                block
            else
                input.form-control.input-sm(name=name type='input')
            if help
                p.help-block= help

