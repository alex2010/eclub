extends inc/main
block content
    .panel
        .panel-heading
            h2= title
    for it, i in _items
        .panel
            .panel-heading
                h2= it.username
                    .pull-right
                        if it.refFile.licence
                            a.btn.btn-success.btn-xs.rh(onclick='cf.showPic(this)', data-url= f.resPath(c.code,it.refFile.licence[0])) Licence
                        if it.refFile.feedback
                            a.btn.btn-success.btn-xs(onclick='cf.showPic(this)', data-url= f.resPath(c.code,it.refFile.feedback[0])) Feedback
            .panel-body
                .row
                    .col-md-3
                        != f.imgItem(it, c, 'guide')
                    .col-md-9
                        p= it.description
                        .contact
                            .col-md-5
                                != f.icon('phone',null,null,'rh')
                                | +86 #{it.phone}

                            .col-md-7
                                != f.icon('envelope',null,null,'rh')
                                != it.email
