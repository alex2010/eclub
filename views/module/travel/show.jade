extends inc/main

block content

    .topHead

        .panel
            .panel-heading
                h2= title
                    include inc/share

        if refFile
            -var _slides = refFile.slide || []
            -var _prop = 'slide'
            -var _h3 = title
            -var _p = subTitle
            include inc/slide

    article.panel
        .panel-heading
            h3 Introducing the #{title} #{pinYin ? '(' + pinYin + ')' : ''}
        .panel-body
            .article!= content

    if theater
        .panel
            .panel-heading
                h3 Famous #{title} Theater in Beijing

        .row.theater
            .col-md-8.r0
                #theater.panel
                    each it,i in theater
                        -var _slides = it.refFile.head || []
                        -var _sid = 'resPic'+i
                        -var _ctx = it
                        -var _prop = 'ref'
                        include inc/slide
                        .panel-heading
                            h4.panel-title= it.title
                        .panel-body
                            p!= it.content

            #info.col-md-4.panel-group
                include inc/sideInfo

    if recommend
        .col-md-12
            .row
                include inc/recommend
